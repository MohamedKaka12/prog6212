@model User
@{
    ViewData["Title"] = "User Login";
    Layout = "_Layout";
}

<h1 class="text-3xl font-bold mb-6 text-indigo-700">Welcome Back</h1>

<div class="max-w-md mx-auto p-6 bg-white rounded-xl shadow-lg">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="p-3 mb-4 text-sm text-green-700 bg-green-100 rounded-lg" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }

    <form asp-action="Login" method="post">
        <div class="mb-4">
            <label asp-for="Username" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Username" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" />
            <span asp-validation-for="Username" class="text-sm text-red-600"></span>
        </div>

        <div class="mb-6">
            <label asp-for="Password" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Password" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" />
            <span asp-validation-for="Password" class="text-sm text-red-600"></span>
        </div>

        <div class="flex flex-col space-y-3">
            <button type="submit" class="w-full py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-150">
                Log In
            </button>
            <a asp-action="Register" class="text-center text-sm font-medium text-green-600 hover:text-green-500 transition duration-150">Need an account? Register here.</a>
        </div>

        <div asp-validation-summary="ModelOnly" class="mt-4 text-sm text-red-600"></div>
    </form>
</div>
